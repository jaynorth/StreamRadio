            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Height="17.448" RenderTransformOrigin="0.5,0.5" Width="48.44" d:LayoutOverrides="Width" Style="{DynamicResource FocusVisual}">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Rectangle Fill="#FFF4F4F5" Stroke="Black" Margin="10.44,41.02,10,38.98" RadiusY="4.5" RadiusX="4.5" d:IsLocked="True"/>
                        <TextBlock x:Name="textBlock" Margin="10.44,41.02,10.667,38.98" TextWrapping="Wrap" Text="Browse" VerticalAlignment="Center" d:LayoutOverrides="Width, Height" Height="Auto" HorizontalAlignment="Center" Background="White" d:IsLocked="True">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black" Offset="0.599"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaulted" Value="true"/>
                        <Trigger Property="IsMouseOver" Value="true"/>
                        <Trigger Property="IsPressed" Value="true"/>
                        <Trigger Property="IsEnabled" Value="false"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
